
{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.md" ],
          "exclude": [ "README.md" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      { "files": [ "**/*.md" ] }
    ],
    "resource": [
      { "files": [ "images/**" ] }
    ],
    "dest": "_site",
    "globalMetadata": {
      "name": "Windows Server Talks",
      "description": "DFS, AD, Hyper-V, and PowerShell Guides by Mohit Maurya"
    },
    "template": [
      "default",
      "modern"
    ]
  }
}
